<Window x:Class="HomeworkTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PRM Algorithm" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Margin="0,0,0,0" Name="myCanvas" VerticalAlignment="Stretch" />
        <Button Grid.Row="1" Content="Generate Test Case 1" Height="23" Width="120" HorizontalAlignment="Left" Name="btnTestCaseOne" Margin="12,2,0,0" Click="btnTestCaseOne_Click" />
        <Button Grid.Row="1" Content="Generate Test Case 2" Height="23" Width="120" HorizontalAlignment="Left" Name="btnTestCaseTwo" Margin="141,2,0,0" Click="btnTestCaseTwo_Click" />
        <Label Content="Shortest Path Length - " Grid.Row="1" Height="25" HorizontalAlignment="Right" Margin="0,0,45,0" Name="lbPathLength" VerticalAlignment="Top" />
        <Label Content="" Grid.Row="1" Height="25" Width="40" HorizontalAlignment="Right" Margin="0,0,0,0" Name="lbPathLengthValue" VerticalAlignment="Top" />
    </Grid>
</Window>
